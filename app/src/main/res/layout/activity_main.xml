<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_spash"
        android:layout_width="wrap_content"
        android:layout_height="731dp"
        android:contentDescription="@string/background_spash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="162dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="@+id/background_spash"
        app:layout_constraintEnd_toEndOf="@+id/background_spash"
        app:layout_constraintStart_toStartOf="@+id/background_spash"
        app:layout_constraintTop_toTopOf="@+id/background_spash"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/tagline"
        android:layout_width="331dp"
        android:layout_height="62dp"
        android:contentDescription="@string/tagline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705"
        app:srcCompat="@drawable/name" />

</androidx.constraintlayout.widget.ConstraintLayout>